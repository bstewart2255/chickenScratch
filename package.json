{
  "name": "signature-auth-prototype",
  "version": "1.0.0",
  "description": "Biometric signature authentication system",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:typescript": "npm run build && node backend/server-typescript.js",
    "dev": "nodemon backend/server.js",
    "dev:typescript": "npm run build && nodemon backend/server-typescript.js",
    "build": "tsc",
    "build:strict": "tsc -p tsconfig.strict.json",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc -p tsconfig.strict.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest tests/unit/ --coverage",
    "test:coverage:integration": "jest tests/integration/ --coverage",
    "test:performance": "ts-node tests/performance/api.bench.ts && ts-node tests/performance/biometric.bench.ts",
    "test:bench": "ts-node tests/performance/biometric.bench.ts",
    "test:bench:api": "ts-node tests/performance/api.bench.ts",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "db:validate": "node scripts/validate-db-config.js",
    "db:fix-user": "node scripts/fix-database-user.js",
    "db:setup": "node backend/setupDatabase.js",
    "db:migrate": "node backend/run_migrations.js",
    "db:migrate:production": "NODE_ENV=production node backend/run_migrations.js",
    "migrate:up": "ts-node scripts/run-migrations.ts migrate",
    "migrate:dry-run": "ts-node scripts/run-migrations.ts dry-run",
    "migrate:rollback": "ts-node scripts/run-migrations.ts rollback",
    "migrate:status": "ts-node scripts/run-migrations.ts status",
    "build:production": "./scripts/build-production.sh",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "monitor": "node scripts/monitor-performance.js"
  },
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "@types/signature_pad": "^2.3.6",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "pg": "^8.16.3",
    "signature_pad": "^5.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@jest/globals": "^30.0.5",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/autocannon": "^7.12.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-jwt": "^6.0.4",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "20.10.5",
    "@types/pg": "8.10.9",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "autocannon": "^8.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "8.56.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.5",
    "node-fetch": "^3.3.2",
    "nodemon": "3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "zod": "3.22.4"
  }
}
