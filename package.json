{
  "name": "signature-auth-prototype",
  "version": "1.0.0",
  "description": "Biometric signature authentication system",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:typescript": "npm run build && node backend/server-typescript.js",
    "dev": "nodemon backend/server.js",
    "dev:typescript": "npm run build && nodemon backend/server-typescript.js",
    "build": "tsc",
    "build:strict": "tsc -p tsconfig.strict.json",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc -p tsconfig.strict.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:utils": "jest tests/utils/",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.5",
    "@types/pg": "8.10.9",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "3.0.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "zod": "3.22.4"
  }
}
